{
  "id": "mesos-influxdb-collector",
  "cpus": 0.1,
  "mem": 64.0,
  "instances": 2,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "kpacha/mesos-influxdb-collector"
    }
  },
  "env": {
    "MESOS_HOST": "10.141.141.10",
    "INFLUXDB_HOST": "192.168.59.103",
    "COLLECTOR_LIFETIME": "300"
  },
  "constraints": [
    ["hostname", "UNIQUE"]
  ],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 300,
  "upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  }
}